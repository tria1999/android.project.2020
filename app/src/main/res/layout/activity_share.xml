<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShareActivity">

    <Button
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/continueButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tweetCheckBox" android:layout_marginTop="28dp"/>
    <CheckBox
            android:text="Tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tweetCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/quoteEditText"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text="Post on Instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/postCheckBox"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/shareCheckBox"
            app:layout_constraintHorizontal_bias="0.513" app:layout_constraintTop_toTopOf="@+id/shareCheckBox"/>
    <CheckBox
            android:text="Share on Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shareCheckBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/tweetCheckBox" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="233dp"
            android:layout_height="228dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/shareImageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:text="Select Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/selectImageButton"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/shareImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Say a few words:"
            android:ems="10"
            android:id="@+id/quoteEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/selectImageButton"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>