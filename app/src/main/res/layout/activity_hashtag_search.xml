<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HashtagSearchActivity">

    <TextView
            android:text="OR"
            android:layout_width="22dp"
            android:layout_height="24dp" android:id="@+id/orText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/trendingRecyclerView" android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="#Type a hashtag to search"
            android:ems="10"
            android:id="@+id/hashtagSearchText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orText"
            android:layout_marginTop="5dp"/>
    <Button
            android:text="Search!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/searchButton"
            app:layout_constraintTop_toBottomOf="@+id/hashtagSearchText"
            android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/resultRecyclerView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/searchButton"
            android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Search Results:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultsText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/resultRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/searchButton" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Trending Hashtags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Tap on a # to see posts!"
            android:layout_width="193dp"
            android:layout_height="25dp" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/trendingRecyclerView"/>
    <Button
            android:text="Set"
            android:layout_width="88dp"
            android:layout_height="37dp" android:id="@+id/setButton"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/trendingRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>